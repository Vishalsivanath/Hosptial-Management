@using HosptialMangement1.Models
@model Patient

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreatePatients</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm())
        {
            <table>
                
                <tr>
                    <td>Fname</td>
                    <td>@Html.TextAreaFor(x => x.Fname)</td>
                </tr>
                <tr>
                    <td>Lname</td>
                    <td>@Html.TextAreaFor(x => x.Lname)</td>
                </tr>
                <tr>
                    <td>Age</td>
                    <td>@Html.TextAreaFor(x => x.Age)</td>
                </tr>
                <tr>
                    <td>BG</td>
                    <td>@Html.TextAreaFor(x => x.Bg)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <button type="submit">AddPatient</button>
                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
